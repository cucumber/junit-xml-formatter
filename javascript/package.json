    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@types/chai": "^5.0.0",
    "@types/chai-almost": "^1.0.3",
    "@types/chai-xml": "^0.3.6",
    "@types/luxon": "^3.4.2",
    "@types/mocha": "^10.0.6",
